{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ipmesctool",
  "version": "0.1.0",
  "identifier": "moe.syhanjin.ipmesctool",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "ipmesctool",
        "width": 1200,
        "height": 900,
        "minWidth": 900,
        "minHeight": 675
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": false,
    "targets": [
      "deb",
      "nsis",
      "msi"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
